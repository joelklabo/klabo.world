{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml"
  ],
  "tasks": {
    "contentlayer": {
      "cache": true,
      "outputs": ["app/.contentlayer/generated/**"],
      "inputs": ["content/**", "app/contentlayer.config.ts", "app/src/app/lib/**"],
      "env": ["NODE_ENV"],
      "dependsOn": []
    },
    "prisma:generate": {
      "cache": true,
      "outputs": ["app/node_modules/@prisma/client/**"],
      "inputs": ["app/prisma/schema.prisma"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["contentlayer", "prisma:generate", "^build", "lint"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "app/.contentlayer/generated/**"
      ]
    }
  }
}
