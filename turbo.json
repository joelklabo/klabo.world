{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env",
    ".env.local",
    "pnpm-lock.yaml"
  ],
  "tasks": {
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "app/.contentlayer/generated/**"]
    },
    "build#app": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "app/.contentlayer/generated/**"]
    },
    "build#pkg": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint#app": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "lint#pkg": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test#app": {
      "dependsOn": ["lint#app"],
      "outputs": []
    },
    "test#pkg": {
      "dependsOn": ["lint#pkg"],
      "outputs": []
    }
  }
}
