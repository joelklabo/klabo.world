{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml"
  ],
  "tasks": {
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "app/.contentlayer/generated/**"
      ]
    }
  }
}
