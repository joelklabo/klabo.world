    <script>
        // Dark mode toggle
        const html = document.documentElement;
        const themeToggle = document.getElementById('theme-toggle');
        
        // Check for saved theme preference or default to light
        const currentTheme = localStorage.getItem('theme') || 'light';
        html.classList.toggle('dark', currentTheme === 'dark');
        
        themeToggle?.addEventListener('click', () => {
            const isDark = html.classList.toggle('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
        });
        
        // Active navigation state
        const currentPath = window.location.pathname;
        // Only select navigation links, not the logo
        const navLinks = document.querySelectorAll('nav ul a[href]');
        navLinks.forEach(link => {
            const href = link.getAttribute('href');
            if (href === currentPath || (href !== '/' && currentPath.startsWith(href))) {
                link.classList.add('bg-white/20', 'text-white');
            }
        });
        
        // Mobile menu toggle
        document.getElementById('mobile-menu-button')?.addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
        
        // Search functionality
        let searchTimeout;
        let currentSearchQuery = '';
        const searchInput = document.getElementById('search-input');
        const mobileSearchInput = document.getElementById('mobile-search-input');
        const searchResults = document.getElementById('search-results');
        
        async function performSearch(query) {
            if (query.length < 2) {
                searchResults.classList.add('hidden');
                return;
            }
            
            currentSearchQuery = query;
            const resultsContainer = searchResults.querySelector('div');
            
            // Show loading state
            resultsContainer.innerHTML = `
                <div class="px-4 py-3">
                    <div class="skeleton h-4 w-3/4 mb-2 rounded"></div>
                    <div class="skeleton h-3 w-full rounded"></div>
                </div>
            `;
            searchResults.classList.remove('hidden');
            
            try {
                const response = await fetch(`/search?q=${encodeURIComponent(query)}`);
                const results = await response.json();
                
                // Check if this is still the current search
                if (query !== currentSearchQuery) return;
                
                if (results.length === 0) {
                    resultsContainer.innerHTML = '<div class="px-4 py-3 text-gray-600 dark:text-white/60">No results found</div>';
                } else {
                    resultsContainer.innerHTML = results.map(result => {
                        // Determine tag color class
                        const getTagClass = (tag) => {
                            const tagLower = tag.toLowerCase();
                            if (tagLower.includes('bitcoin')) return 'tag-bitcoin';
                            if (tagLower.includes('lightning')) return 'tag-lightning';
                            if (tagLower.includes('nostr') || tagLower.includes('nip')) return 'tag-nostr';
                            return 'bg-purple-500/20 text-purple-300';
                        };
                        
                        return `
                            <a href="${result.url}" class="block px-4 py-3 hover:bg-purple-500/20 transition-colors duration-150 border-b border-purple-500/10 last:border-0">
                                <div class="flex items-start gap-3">
                                    ${result.type === 'app' && result.icon ? `
                                        <img src="${result.icon}" alt="${result.title} icon" class="w-10 h-10 rounded-lg flex-shrink-0 object-cover">
                                    ` : ''}
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2">
                                            <span class="font-medium text-gray-900 dark:text-white">${highlightMatch(result.title, query)}</span>
                                            <span class="text-xs px-2 py-0.5 rounded-full ${
                                                result.type === 'app' ? 'bg-blue-500/20 text-blue-300' : 
                                                result.type === 'context' ? 'bg-purple-500/20 text-purple-300' :
                                                'bg-green-500/20 text-green-300'
                                            }">${result.type}</span>
                                        </div>
                                        <div class="text-sm text-gray-600 dark:text-white/60 mt-1">${highlightMatch(result.description, query)}</div>
                                        ${result.tags ? `<div class="flex gap-2 mt-2">${result.tags.map(tag => 
                                            `<span class="text-xs px-2 py-1 ${getTagClass(tag)} rounded-full border">${tag}</span>`
                                        ).join('')}</div>` : ''}
                                    </div>
                                </div>
                            </a>
                        `;
                    }).join('');
                }
                
                searchResults.classList.remove('hidden');
            } catch (error) {
                console.error('Search error:', error);
                resultsContainer.innerHTML = '<div class="px-4 py-3 text-red-400">Search error. Please try again.</div>';
            }
        }
        
        // Highlight search matches
        function highlightMatch(text, query) {
            const regex = new RegExp(`(${query})`, 'gi');
            return text.replace(regex, '<mark class="bg-yellow-400/30 text-yellow-200">$1</mark>');
        }
        
        // Desktop search
        searchInput?.addEventListener('input', function(e) {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => performSearch(e.target.value), 300);
        });
        
        // Mobile search with AJAX (same as desktop)
        const mobileSearchResults = document.getElementById('mobile-search-results');
        let mobileSearchDebounce = null;
        
        mobileSearchInput?.addEventListener('input', function(e) {
            clearTimeout(mobileSearchDebounce);
            const query = e.target.value.trim();
            
            if (query.length < 2) {
                mobileSearchResults?.classList.add('hidden');
                return;
            }
            
            mobileSearchDebounce = setTimeout(() => performMobileSearch(query), 300);
        });
        
        async function performMobileSearch(query) {
            if (query.length < 2) {
                mobileSearchResults.classList.add('hidden');
                return;
            }
            
            currentSearchQuery = query;
            const resultsContainer = mobileSearchResults.querySelector('div');
            
            // Show loading state
            resultsContainer.innerHTML = `
                <div class="px-4 py-3">
                    <div class="skeleton h-4 w-3/4 mb-2 rounded"></div>
                    <div class="skeleton h-3 w-full rounded"></div>
                </div>
            `;
            mobileSearchResults.classList.remove('hidden');
            
            try {
                const response = await fetch(`/search?q=${encodeURIComponent(query)}`);
                const results = await response.json();
                
                // Check if this is still the current search
                if (query !== currentSearchQuery) return;
                
                if (results.length === 0) {
                    resultsContainer.innerHTML = '<div class="px-4 py-3 text-gray-600 dark:text-white/60">No results found</div>';
                } else {
                    resultsContainer.innerHTML = results.map(result => {
                        // Determine tag color class
                        const getTagClass = (tag) => {
                            const tagLower = tag.toLowerCase();
                            if (tagLower.includes('bitcoin')) return 'tag-bitcoin';
                            if (tagLower.includes('lightning')) return 'tag-lightning';
                            if (tagLower.includes('nostr') || tagLower.includes('nip')) return 'tag-nostr';
                            return 'bg-purple-500/20 text-purple-300';
                        };
                        
                        return `
                            <a href="${result.url}" class="block px-4 py-3 hover:bg-purple-500/20 transition-colors duration-150 border-b border-purple-500/10 last:border-0">
                                <div class="flex items-start gap-3">
                                    ${result.type === 'app' && result.icon ? `
                                        <img src="${result.icon}" alt="${result.title} icon" class="w-10 h-10 rounded-lg flex-shrink-0 object-cover">
                                    ` : ''}
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2">
                                            <span class="font-medium text-gray-900 dark:text-white">${highlightMatch(result.title, query)}</span>
                                            <span class="text-xs px-2 py-0.5 rounded-full ${
                                                result.type === 'app' ? 'bg-blue-500/20 text-blue-300' : 
                                                result.type === 'context' ? 'bg-purple-500/20 text-purple-300' :
                                                'bg-green-500/20 text-green-300'
                                            }">${result.type}</span>
                                        </div>
                                        <div class="text-sm text-gray-600 dark:text-white/60 mt-1">${highlightMatch(result.description, query)}</div>
                                        ${result.tags ? `<div class="flex gap-2 mt-2">${result.tags.map(tag => 
                                            `<span class="text-xs px-2 py-1 ${getTagClass(tag)} rounded-full border">${tag}</span>`
                                        ).join('')}</div>` : ''}
                                    </div>
                                </div>
                            </a>
                        `;
                    }).join('');
                }
            } catch (error) {
                console.error('Search error:', error);
                resultsContainer.innerHTML = '<div class="px-4 py-3 text-red-400">Search error. Please try again.</div>';
            }
        }
        
        // Close search results when clicking outside or pressing Escape
        document.addEventListener('click', function(e) {
            if (!searchInput?.contains(e.target) && !searchResults?.contains(e.target)) {
                searchResults?.classList.add('hidden');
            }
            if (!mobileSearchInput?.contains(e.target) && !mobileSearchResults?.contains(e.target)) {
                mobileSearchResults?.classList.add('hidden');
            }
        });
        
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                searchResults?.classList.add('hidden');
                mobileSearchResults?.classList.add('hidden');
                searchInput?.blur();
                mobileSearchInput?.blur();
            }
        });
        
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
