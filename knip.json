{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "app": {
      "entry": [
        "src/app/**/*.{ts,tsx}",
        "tests/**/*.ts",
        "next.config.ts",
        "contentlayer.config.ts"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": [
        "src/components/ui/card.tsx",
        "src/components/ui/form.tsx",
        "src/components/annotations/index.ts",
        "src/components/annotations/types.ts",
        "src/lib/blob-service.ts",
        "src/lib/flags/types.ts",
        "src/lib/github-service.ts",
        "src/lib/rateLimiter.ts",
        "src/server/trpc/caller.ts"
      ],
      "ignoreDependencies": [
        "@azure/monitor-opentelemetry",
        "@azure/storage-blob",
        "@hookform/resolvers",
        "@mdx-js/mdx",
        "@next-auth/prisma-adapter",
        "@octokit/rest",
        "@trpc/client",
        "import-in-the-middle",
        "react-hook-form",
        "remark-frontmatter",
        "remark-gfm",
        "require-in-the-middle",
        "@types/bcryptjs",
        "baseline-browser-mapping",
        "eslint-import-resolver-typescript",
        "tailwindcss",
        "tw-animate-css"
      ]
    },
    "packages/scripts": {
      "entry": ["src/**/*.ts"],
      "ignore": ["src/refresh-github-projects.ts", "src/verify-contentlayer-schema.ts"]
    },
    "packages/content": {
      "entry": [
        "src/index.ts",
        "src/cli/bin.ts",
        "src/mcp/server.ts",
        "src/watcher/daemon.ts"
      ],
      "project": ["src/**/*.ts"],
      "ignore": ["dist/**"]
    }
  },
  "ignore": [
    "**/*.d.ts",
    "**/generated/**",
    "**/dist/**",
    ".worktrees/**",
    "app/.contentlayer/**",
    "scripts/load-smoke.js",
    "scripts/validate-env.ts",
    "contentlayer.config.ts",
    "tailwind.config.ts"
  ],
  "ignoreDependencies": [
    "postcss",
    "@azure/monitor-opentelemetry-exporter",
    "@opentelemetry/auto-instrumentations-node",
    "@opentelemetry/sdk-node",
    "@playwright/test",
    "@secretlint/secretlint-rule-preset-recommend",
    "contentlayer",
    "import-in-the-middle",
    "playwright",
    "require-in-the-middle",
    "@types/react-dom",
    "@klaboworld/config",
    "@klaboworld/core"
  ],
  "ignoreBinaries": ["just", "eslint", "mise", "tar"],
  "rules": {
    "exports": "warn",
    "types": "warn",
    "nsExports": "warn",
    "classMembers": "warn",
    "duplicates": "warn",
    "enumMembers": "warn"
  }
}
