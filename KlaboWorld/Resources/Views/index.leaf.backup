<script>
    // Cursor trail effect
    const trails = document.querySelectorAll('.cursor-trail');
    let mouseX = 0, mouseY = 0;
    let trailX = [0, 0, 0], trailY = [0, 0, 0];
    
    document.addEventListener('mousemove', (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
    });
    
    function animateTrails() {
        trails.forEach((trail, index) => {
            const delay = (index + 1) * 0.1;
            trailX[index] += (mouseX - trailX[index]) * delay;
            trailY[index] += (mouseY - trailY[index]) * delay;
            
            trail.style.left = trailX[index] + 'px';
            trail.style.top = trailY[index] + 'px';
            trail.style.opacity = '0.6';
        });
        
        requestAnimationFrame(animateTrails);
    }
    animateTrails();
    
    // Magnetic button effect
    const magneticButton = document.getElementById('magnetic-button');
    const radialMenu = document.getElementById('radial-menu');
    const menuItems = radialMenu.querySelectorAll('.menu-item');
    let menuOpen = false;
    
    magneticButton.addEventListener('mousemove', (e) => {
        const rect = magneticButton.getBoundingClientRect();
        const x = e.clientX - rect.left - rect.width / 2;
        const y = e.clientY - rect.top - rect.height / 2;
        
        magneticButton.style.transform = `translate(${x * 0.3}px, ${y * 0.3}px) scale(1.1)`;
    });
    
    magneticButton.addEventListener('mouseleave', () => {
        magneticButton.style.transform = 'translate(0, 0) scale(1)';
    });
    
    magneticButton.addEventListener('click', () => {
        menuOpen = !menuOpen;
        
        if (menuOpen) {
            radialMenu.style.pointerEvents = 'auto';
            menuItems.forEach((item, index) => {
                item.style.opacity = '1';
                item.style.pointerEvents = 'auto';
                
                // Keep the transform based on the original position
                if (index === 0) item.style.transform = 'translate(-80px, -80px)';
                if (index === 1) item.style.transform = 'translateY(-120px)';
                if (index === 2) item.style.transform = 'translate(80px, -80px)';
            });
        } else {
            radialMenu.style.pointerEvents = 'none';
            menuItems.forEach(item => {
                item.style.opacity = '0';
                item.style.pointerEvents = 'none';
                item.style.transform = 'translate(0, 0)';
            });
        }
    });
    
    // Sound visualization interaction
    const soundBars = document.querySelectorAll('.sound-bar');
    let audioContext = null;
    let isPlaying = false;
    
    document.addEventListener('click', () => {
        if (!audioContext) {
            audioContext = new (window.AudioContext || window.webkitAudioContext)();
            
            // Create oscillator for ambient sound
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            oscillator.frequency.value = 440;
            gainNode.gain.value = 0.05;
            
            oscillator.start();
            
            // Modulate frequency based on mouse position
            document.addEventListener('mousemove', (e) => {
                const freq = 200 + (e.clientX / window.innerWidth) * 600;
                oscillator.frequency.value = freq;
                
                // Update sound bars based on frequency
                soundBars.forEach((bar, index) => {
                    const intensity = Math.sin(freq * 0.01 + index * 0.5) * 30 + 50;
                    bar.style.setProperty('--max-height', `${intensity}px`);
                });
            });
        }
    });
    
    // Split screen hover effect
    const leftSide = document.querySelector('.split-reveal-left');
    const rightSide = document.querySelector('.split-reveal-right');
    
    leftSide.addEventListener('mouseenter', () => {
        leftSide.style.clipPath = 'polygon(0 0, 70% 0, 70% 100%, 0 100%)';
        rightSide.style.clipPath = 'polygon(70% 0, 100% 0, 100% 100%, 70% 100%)';
    });
    
    rightSide.addEventListener('mouseenter', () => {
        leftSide.style.clipPath = 'polygon(0 0, 30% 0, 30% 100%, 0 100%)';
        rightSide.style.clipPath = 'polygon(30% 0, 100% 0, 100% 100%, 30% 100%)';
    });
    
    document.querySelector('.flex').addEventListener('mouseleave', () => {
        leftSide.style.clipPath = 'polygon(0 0, 50% 0, 50% 100%, 0 100%)';
        rightSide.style.clipPath = 'polygon(50% 0, 100% 0, 100% 100%, 50% 100%)';
    });
</script>
