<style>
    /* Morphing blob animation */
    @keyframes morph {
        0%, 100% { border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%; }
        25% { border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%; }
        50% { border-radius: 50% 60% 30% 70% / 30% 40% 70% 40%; }
        75% { border-radius: 60% 40% 60% 30% / 70% 50% 40% 60%; }
    }
    
    .morph-blob {
        animation: morph 15s ease-in-out infinite;
        filter: blur(40px);
    }
    
    /* Glitch effect */
    @keyframes glitch {
        0%, 100% { text-shadow: 2px 2px rgb(255, 0, 128), -2px -2px rgb(0, 255, 128); }
        25% { text-shadow: -2px 2px rgb(0, 255, 128), 2px -2px rgb(255, 0, 128); }
        50% { text-shadow: 2px -2px rgb(255, 0, 128), -2px 2px rgb(0, 255, 128); }
        75% { text-shadow: -2px -2px rgb(0, 255, 128), 2px 2px rgb(255, 0, 128); }
    }
    
    .glitch-text:hover {
        animation: glitch 0.3s ease-in-out infinite;
    }
    
    /* Circular navigation */
    .circular-nav {
        transform-style: preserve-3d;
        animation: rotate3d 20s linear infinite;
    }
    
    @keyframes rotate3d {
        from { transform: rotateY(0deg); }
        to { transform: rotateY(360deg); }
    }
    
    .circular-nav:hover {
        animation-play-state: paused;
    }
    
    /* Cursor trail effect */
    .cursor-trail {
        position: fixed;
        pointer-events: none;
        opacity: 0;
        transform: translate(-50%, -50%);
        transition: opacity 0.3s, transform 0.1s;
    }
    
    /* Sound wave visualization */
    .sound-bar {
        animation: soundWave 1s ease-in-out infinite;
        animation-delay: calc(var(--i) * 0.1s);
    }
    
    @keyframes soundWave {
        0%, 100% { height: 20px; }
        50% { height: var(--max-height); }
    }
    
    /* Liquid transition */
    .liquid-bg {
        background: linear-gradient(45deg, rgb(255, 0, 110), rgb(131, 56, 236), rgb(58, 134, 255), rgb(6, 255, 165));
        background-size: 300% 300%;
        animation: liquidShift 10s ease infinite;
    }
    
    @keyframes liquidShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    
    /* Split screen reveal */
    .split-reveal {
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
        transition: clip-path 1s cubic-bezier(0.77, 0, 0.175, 1);
    }
    
    .split-reveal-left {
        clip-path: polygon(0 0, 50% 0, 50% 100%, 0 100%);
    }
    
    .split-reveal-right {
        clip-path: polygon(50% 0, 100% 0, 100% 100%, 50% 100%);
    }
    
    /* Perspective text */
    .perspective-text {
        transform: perspective(500px) rotateX(25deg);
    }
    
    /* Noise texture overlay */
    .noise::before {
        content: "";
        position: absolute;
        inset: 0;
        background-image: 
            repeating-linear-gradient(45deg, transparent, transparent 2px, rgba(255,255,255,.03) 2px, rgba(255,255,255,.03) 4px),
            repeating-linear-gradient(-45deg, transparent, transparent 2px, rgba(0,0,0,.03) 2px, rgba(0,0,0,.03) 4px);
        pointer-events: none;
    }
</style>
#endexport

