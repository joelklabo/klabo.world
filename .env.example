# Database
DATABASE_URL=file:./dev.db

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# For production Azure storage:
# STORAGE_TYPE=azure
# AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
# AZURE_STORAGE_CONTAINER=blog-images

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-in-production

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_USERNAME=your_github_username

# Site Configuration (Public)
NEXT_PUBLIC_SITE_NAME=Your Blog Name
NEXT_PUBLIC_SITE_DESCRIPTION=Your blog description
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Social Links (Public)
NEXT_PUBLIC_TWITTER_HANDLE=@your_twitter
NEXT_PUBLIC_GITHUB_PROFILE=https://github.com/your_username
NEXT_PUBLIC_LINKEDIN_PROFILE=https://linkedin.com/in/your_profile

# Production only:
# DATABASE_URL=postgresql://user:password@host:port/database
# AZURE_CLIENT_ID=your_azure_client_id
# AZURE_CLIENT_SECRET=your_azure_client_secret
# AZURE_TENANT_ID=your_azure_tenant_id