{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "pnpm": {
    "enabled": true
  },
  "ignoreDeps": [
    "next",
    "react",
    "react-dom"
  ]
}
