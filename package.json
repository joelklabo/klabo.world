{
  "name": "klaboworld-monorepo",
  "private": true,
  "version": "0.0.1",
  "description": "Next-generation klabo.world stack (Next.js, MDX, Prisma, Azure).",
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=24.11.1",
    "pnpm": ">=10.22.0"
  },
  "scripts": {
    "bootstrap": "just bootstrap",
    "compile": "mise exec -- pnpm exec tsc --noEmit -p app/tsconfig.json",
    "dev": "just dev",
    "lint": "just lint",
    "test": "just test",
    "test:unit": "mise exec -- pnpm --filter app run test",
    "test:lnurlp-case": "node scripts/verify-lnurlp-case.mjs",
    "doctor": "just doctor",
    "validate:env": "tsx scripts/validate-env.ts",
    "lint:dead": "knip",
    "lint:dupes": "jscpd",
    "lint:secrets": "secretlint \"**/*\"",
    "lint:style": "stylelint \"**/*.css\"",
    "lint:deps": "depcruise --config .dependency-cruiser.js app/src",
    "check:all": "pnpm lint:dead && pnpm lint:dupes && pnpm lint:secrets && pnpm lint:style && pnpm lint:deps && pnpm turbo lint",
    "lint:boundaries": "eslint -c .eslintrc.boundaries.json \"app/**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@azure/monitor-opentelemetry-exporter": "1.0.0-beta.32",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@opentelemetry/auto-instrumentations-node": "0.67.0",
    "@opentelemetry/sdk-node": "0.208.0",
    "@playwright/test": "^1.56.1",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@types/node": "20.19.25",
    "contentlayer": "0.3.4",
    "dependency-cruiser": "^17.3.4",
    "husky": "^9.1.7",
    "import-in-the-middle": "^2.0.0",
    "jscpd": "^4.0.5",
    "knip": "^5.73.4",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "require-in-the-middle": "^8.0.1",
    "secretlint": "^11.2.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tsx": "^4.21.0",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "vitest": "4.0.9",
    "wait-on": "^7.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joelklabo/KlaboWorld.git"
  },
  "keywords": [
    "nextjs",
    "prisma",
    "contentlayer",
    "klaboworld"
  ],
  "author": "Joel Klabo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joelklabo/KlaboWorld/issues"
  },
  "homepage": "https://klabo.world",
  "dependencies": {
    "slugify": "^1.6.6"
  },
  "pnpm": {
    "overrides": {
      "baseline-browser-mapping": "2.9.7",
      "import-in-the-middle": "2.0.0",
      "require-in-the-middle": "8.0.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@opentelemetry/api": ">=1.0.0",
        "esbuild": "0.17.x || 0.18.x || 0.25.x",
        "next": ">=12"
      }
    },
    "patchedDependencies": {
      "clipanion@3.2.1": "patches/clipanion@3.2.1.patch"
    }
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter app exec eslint --fix"
    ],
    "*.css": [
      "pnpm exec stylelint --fix"
    ],
    "*": [
      "pnpm exec secretlint"
    ]
  }
}
